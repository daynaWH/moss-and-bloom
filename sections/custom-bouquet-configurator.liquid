/* Summary card */
.summary-card {
    background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
    border: 1px solid #dee2e6;
    border-radius: 0.75rem;
    padding: 1.25rem;
    margin-bottom: 1rem;
    box-shadow: 0 0.1rem 0.25rem #0000000d;
}

.summary-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
    padding-bottom: 0.75rem;
    border-bottom: 1px solid #dee2e6;
}

.summary-title-main {
    font-size: 1.1rem;
    font-weight: 700;
    color: #333;
    margin: 0;
}

.price-badge {
    background: #303e2f;
    color: #ffffff;
    padding: 0.5rem 1rem;
    border-radius: 1.5rem;
    font-weight: 600;
    font-size: 1.1rem;
}

.summary-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 0.75rem;
}

.summary-item {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
}

.summary-label {
    font-size: 0.8rem;
    color: #666;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.5px;
}

.summary-value {
    font-weight: 600;
    color: #333;
    font-size: 0.9rem;
}

.summary-value.not-selected {
    color: #999;
    font-style: italic;
    font-weight: 400;
}

/* Config sections */
.config-section {
    margin-bottom: 2.5rem;
}

.config-title {
    font-size: 1.5rem;
    margin-bottom: 1rem;
    color: #333;
    display: flex;
    align-items: center;
    gap: 0.5rem;
}

.config-title::after {
    content: '';
    flex: 1;
    height: 1px;
    background: linear-gradient(to right, #dee2e6, transparent);
}

.size-options {
    display: flex;
    gap: 1rem;
}

.config-option {
    display: block;
    width: 100%;
    padding: 0.6rem;
    margin-bottom: 0.5rem;
    border: 2px solid #e0e0e0;
    background: #ffffff;
    text-align: left;
    cursor: pointer;
    transition: all 0.3s ease;
    border-radius: 0.5rem;
    position: relative;
}

.config-option:hover {
    border-color: #bdc69f;
    background: #f8f9fa;
    transform: translateY(-1px);
    box-shadow: 0 0.1rem 0.5rem #303e2f26;
}

.config-option.selected {
    border-color: #303e2f;
    background: #e3ecc4;
    box-shadow: 0 0 0 0.2rem #303e2f1a;
}

.config-option.selected::before {
    content: '✓';
    position: absolute;
    top: 0.5rem;
    right: 0.75rem;
    color: #303e2f;
    font-weight: bold;
    font-size: 1.2rem;
}

.option-name {
    display: block;
    font-weight: 600;
    margin-bottom: 0.25rem;
}

.option-description {
    display: block;
    color: #666;
    font-size: 0.9rem;
}

.palette-preview {
    display: flex;
    gap: 0.5rem;
    margin-bottom: 0.5rem;
}

.color-dot {
    width: 1.25rem;
    height: 1.25rem;
    border-radius: 50%;
    display: inline-block;
    border: 2px solid #ffffffcc;
    box-shadow: 0 1px 3px #00000033;
}

/* Preview image styles */
.preview-image-container {
    position: relative;
    margin-bottom: 1rem;
}

.zoomable-image {
    cursor: zoom-in;
    transition: transform 0.2s ease;
    width: 100%;
    height: 18rem;
    object-fit: cover;
    border-radius: 0.5rem;
}

.zoomable-image:hover {
    transform: scale(1.02);
}

.zoom-hint {
    position: absolute;
    bottom: 10px;
    right: 10px;
    background: #000000b3;
    color: #ffffff;
    padding: 0.5rem 0.75rem;
    border-radius: 1.25rem;
    font-size: 0.8rem;
    display: flex;
    align-items: center;
    gap: 0.3rem;
    opacity: 0;
    transition: opacity 0.3s ease;
    pointer-events: none;
}

.preview-image-container:hover .zoom-hint {
    opacity: 1;
}

/* Lightbox Styles */
.lightbox-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: #000000e6;
    display: none;
    align-items: center;
    justify-content: center;
    z-index: 1000;
    backdrop-filter: blur(5px);
}

.lightbox-overlay.active {
    display: flex;
}

.lightbox-container {
    position: relative;
    max-width: 90vw;
    max-height: 90vh;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.lightbox-close {
    position: absolute;
    top: -3rem;
    right: 0;
    background: none;
    border: none;
    color: #ffffff;
    font-size: 3rem;
    cursor: pointer;
    z-index: 1001;
    width: 3rem;
    height: 3rem;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    transition: background-color 0.3s ease;
}

.lightbox-close:hover {
    background: #ffffff33;
}

.lightbox-image {
    max-width: 100%;
    max-height: 80vh;
    object-fit: contain;
    border-radius: 0.5rem;
    cursor: grab;
    transition: transform 0.3s ease;
    user-select: none;
}

.lightbox-image:active {
    cursor: grabbing;
}

.lightbox-image.zoomed {
    cursor: move;
}

.lightbox-info {
    margin-top: 1rem;
    text-align: center;
    color: #ffffff;
}

.lightbox-info h4 {
    margin: 0 0 0.5rem 0;
    font-size: 1.2rem;
}

.lightbox-info p {
    margin: 0;
    opacity: 0.8;
    font-size: 0.9rem;
}

#preview-image, .no-image-placeholder {
    width: 100%;
    height: 25rem;
    object-fit: cover;
    margin-top: 1rem;
    border-radius: 0.5rem;
    transition: opacity 0.3s ease;
}

.no-image-placeholder {
    display: flex;
    align-items: center;
    justify-content: center;
    background: #f8f9fa;
    border: 2px dashed #dee2e6;
}

.preview-gallery {
    margin-bottom: 1.5rem;
}

.preview-gallery h5 {
    margin-bottom: 0.5rem;
    font-size: 1rem;
    color: #666;
}

.gallery-thumbnails {
    display: flex;
    gap: 0.5rem;
    overflow-x: auto;
    padding: 0.5rem 0;
    /* max-height: 7rem; */
}

.gallery-thumb {
    border: 2px solid #e0e0e0;
    border-radius: 0.25rem;
    background: none;
    cursor: pointer;
    transition: border-color 0.3s ease;
    max-width: 5rem;
    max-height: 5rem;
}

.gallery-thumb:hover {
    border-color: #303e2f;
}

.gallery-thumb img {
    display: block;
    border-radius: 2px;
    height: 100%;
    object-fit: cover;
}

/* Button styles */
.btn {
    padding: 1rem 2rem;
    border: none;
    border-radius: 0.5rem;
    font-size: 1.1rem;
    cursor: pointer;
    transition: all 0.3s ease;
    width: 100%;
    font-weight: 600;
    position: relative;
    overflow: hidden;
}

.btn-primary {
    background: linear-gradient(135deg, #576d55 0%, #2e3b2d 100%);
    color: #ffffff;
    box-shadow: 0 4px 15px #303e2f4d;
}

.btn-primary:hover:not(:disabled) {
    background: linear-gradient(135deg, #2e3b2d 0%,rgb(23, 29, 22) 100%);
    transform: translateY(-2px);
    box-shadow: 0 6px 20px #303e2f66;
}

.btn:disabled {
    background: #ccc;
    cursor: not-allowed;
    transform: none;
    box-shadow: none;
}

.cart-note {
    text-align: center;
    color: #666;
    font-size: 0.9rem;
    margin-top: 0.5rem;
}

/* Mobile responsiveness */
@media (max-width: 48em) {
    .configurator-wrapper {
        grid-template-columns: 1fr;
        grid-template-rows: auto;
        gap: 2rem;
    }

    .config-panel {
        grid-row: auto;
    }

    .preview-panel {
        position: static;
        height: auto;
        max-height: none;
        grid-row: 1;
    }

    .preview-content {
        overflow-y: visible;
    }

    .size-options {
        flex-direction: column;
        gap: 0.5rem;
    }
}

/* Custom scrollbar for preview content */
.preview-content::-webkit-scrollbar {
    width: 6px;
}

.preview-content::-webkit-scrollbar-track {
    background: #f1f1f1;
    border-radius: 3px;
}

.preview-content::-webkit-scrollbar-thumb {
    background: #c1c1c1;
    border-radius: 3px;
}

.preview-content::-webkit-scrollbar-thumb:hover {
    background: #a8a8a8;
}
{% endstylesheet %}

